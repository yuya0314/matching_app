<div class="sign-up-page">
  <div class="card">
    <div class="card-header">
      アカウントを作成する
    </div>
    <div class="card-body">
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>
       
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認用パスワード"%>
        </div>
        <div class="text-center">
          <%= f.submit "はじめる", class: "btn btn-info text-white" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
