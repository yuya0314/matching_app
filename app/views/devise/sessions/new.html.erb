<div class="container login-container">
  <div class="row justify-content-center">
    <div class="col-md-8 login-form">
      <h3>ログインする</h3>
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>    
        <% if devise_mapping.rememberable? %>
          <div class="field form-group">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>ログインを記憶する</span>
            <% end %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "ログイン", class: "btnSubmit" %>
        </div>
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
