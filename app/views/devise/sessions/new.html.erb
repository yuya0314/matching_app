<div class="sign-in-page">
  <div class="card">
    <div class="card-header">
      ログインする
    </div>

    <div class="card-body">
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>
        
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>ログインを記憶する</span>
            <% end %>
          </div>
        <% end %>
        <div class="sign-in__submit-btn">
          <%= f.submit "ログイン", class: "btn btn-info text-white" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>


