
<div class="container emp-profile">
       <form method="post">
           <div class="row">
               <div class="col-md-4">
                   <div class="profile-img">
                   <%= image_tag @user.profile_image.url %>
                   </div>
               </div>
               <div class="col-md-6">
                   <div class="profile-head">
                               <h5>
                                 <%= @user.name %>
                               </h5>
                               <p>
                                  ファン歴： <%=@user.fan_years %>
                               </p>
                               <p>
                                  好きな選手： <%=@user.favorite_player %>
                               </p>
                               <p class="proile-rating"><%= @user.self_introduction %></p>
                   </div>
               </div>
               <div class="col-md-2">
                <%= link_to "ユーザー編集", edit_user_registration_path,class:"profile-edit-btn"%>
               </div>
           </div>
       </form>           
   </div>
